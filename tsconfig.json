{
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "rootDir": "src",
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}